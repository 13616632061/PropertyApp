<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 背景  gradient是渐变,corners定义的是圆角 -->
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="1dip" />

            <gradient
                android:angle="270"
                android:centerColor="#ffDCDCDB"
                android:centerY="0.7"
                android:endColor="#ff747674"
                android:startColor="#ff9d9e9d" />
        </shape>
    </item>
    <!-- 第二条进度条颜色 -->
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="1dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#6666D5DE"
                    android:centerY="0.7"
                    android:endColor="#9966D5DE"
                    android:startColor="#9966D5DE" />
            </shape>
        </clip>
    </item>
    <!-- 进度条 -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="1dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#9901bac6"
                    android:centerY="0.7"
                    android:endColor="#ff01bac6"
                    android:startColor="#ff01bac6" />
            </shape>
        </clip>
    </item>

</layer-list>