<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/my_bg_pic">

        <RelativeLayout
            android:id="@+id/left_return_btn"
            android:layout_width="45dp"
            android:layout_height="45dp">

            <ImageView
                android:id="@+id/iv_title_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/icon_back" />

 <!--           <TextView
                android:id="@+id/iv_title_text_left2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/iv_title_back"
                android:text="返回"
                android:textColor="@color/tv_color_name"
                android:textSize="14sp" />-->
        </RelativeLayout>

        <com.glory.bianyitong.widght.CircleImageView
            android:id="@+id/cim_ta_head_pic"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="42dp" />

        <TextView
            android:id="@+id/text_ta_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cim_ta_head_pic"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@color/tv_color_name"
            android:textSize="17sp" />
        <LinearLayout
            android:id="@+id/ll_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_ta_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ta_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/tv_color_name"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/ta_dynamic_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="@string/ta_is_dynamics"
        android:textColor="@color/tv_color_name"
        android:textSize="15sp" />

    <include layout="@layout/base_view_line"></include>

</LinearLayout>