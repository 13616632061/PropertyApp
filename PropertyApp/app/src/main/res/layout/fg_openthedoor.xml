<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:tag="OpenTheDoorFragment"
    android:id="@+id/pop_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--android:background="@drawable/opendoor_ad_bg_corner"-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="220dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="12dp">

            <ImageView
                android:id="@+id/iv_open_ad"
                android:scaleType="fitXY"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="45dp"
                android:layout_height="24dp"
                android:layout_alignParentBottom="true"
                android:background="@color/dark_transparent"
                android:gravity="bottom"
                android:paddingBottom="1dp"
                android:paddingLeft="2dp"
                android:text="@string/advertising"
                android:textColor="@color/submit_yellow_color" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_noview"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true" />

        <RelativeLayout
            android:id="@+id/rl_open_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_noview">

            <TextView
                android:id="@+id/tv_switch_area_od"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="35dp"
                android:background="@drawable/bg_opendoor_tv_corner"
                android:gravity="center"
                android:text="@string/switch_the_cell"
                android:textColor="@color/white"
                android:textSize="13sp" />

            <ImageView
                android:id="@+id/iv_opendoor_close"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/log_door_close" />

            <TextView
                android:id="@+id/tv_key_manager"
                android:layout_width="78dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35dp"
                android:background="@drawable/bg_opendoor_tv_corner"
                android:gravity="center"
                android:text="@string/key_management"
                android:textColor="@color/white"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

        <HorizontalScrollView
            android:id="@+id/hs_open_door_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_open_bottom"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="40dp"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/ll_open_the_door"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="7dp"
                android:paddingRight="55dp"></LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/ll_open_door_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/rl_open_bottom"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/lay_door1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_door" />

                <TextView
                    android:id="@+id/tv_door_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_door2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_door" />

                <TextView
                    android:id="@+id/tv_door_name2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="9dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>