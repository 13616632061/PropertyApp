<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/iv_open_the_cabinet"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/shape_yellow"
        android:text="开柜"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="16dp"
        />

    <RelativeLayout
        android:id="@+id/rl_express"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="28dp"
        android:layout_toRightOf="@id/iv_open_the_cabinet">
        <ImageView
            android:id="@+id/iv_express_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/xiangzi"/>
        <TextView
            android:id="@+id/tv_express_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/iv_express_icon"
            android:text="快件一"/>

        <TextView
            android:id="@+id/tv_express_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/iv_express_icon"
            android:layout_marginTop="8dp"
            android:background="@color/linegray"/>

        <TextView
            android:id="@+id/tv_express_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_express_line"
            android:layout_marginTop="10dp"
            android:text="xxxxxxxxxxxxxxxxx"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/item_express_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_express"
        android:background="@color/linegray"/>
    <ImageView
        android:id="@+id/iv_share"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:paddingLeft="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_express_line"
        android:src="@drawable/fenxiangyaoshi"/>

</RelativeLayout>