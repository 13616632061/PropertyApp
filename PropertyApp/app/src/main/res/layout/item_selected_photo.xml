<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content">
    <com.litao.android.lib.view.SquaredImageView
        android:id="@+id/select_photo_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:scaleType="centerInside"/>
    <!--android:background="@color/photo_background_color"-->

    <ImageView
        android:id="@+id/iv_select_photo_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/log_select_photo_close"
        android:visibility="visible"/>
</RelativeLayout>
