<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_module_name1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="11dp"
            android:drawableLeft="@drawable/icon_every_first"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:text="@string/daily_prerelease"
            android:textAppearance="@style/TextTypeFace_pzsx"
            android:textColor="@color/module_green_color"
            android:textSize="14sp" />
        <!--10点准时开始-->
        <TextView
            android:id="@+id/tv_module_name12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_module_name1"
            android:layout_marginLeft="12dp"
            android:text=""
            android:textColor="@color/small_text_color_gray"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_everyday_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/view_pager_content2"
            android:layout_width="match_parent"
            android:layout_height="165dp"
            android:orientation="vertical">

            <android.support.v4.view.ViewPager
                android:id="@+id/adViewPager2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/viewGroup2"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@id/view_pager_content2"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:gravity="center|center_horizontal"
            android:orientation="horizontal" />
    </LinearLayout>


</LinearLayout>