<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bg_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.TextMain" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="MyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/circle_rating_bar_full</item>
        <item name="android:minHeight">18dip</item>
        <item name="android:maxHeight">72dip</item>
    </style>
    <style name="main_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_weight">1.0</item>
    </style>
    <style name="main_title_text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="main_hint_text">
        <item name="android:textSize">15sp</item>
    </style>
    <style name="main_title_right_text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="public_text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="public_text2">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="my_text_item">
        <item name="android:padding">15dp</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>
    <!--我的 页面字体-->
    <style name="my_base_text_style">
        <item name="android:textColor">@color/aterrimus</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="nav_bar_weight2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 从下往上进，上往下退出 -->
    <style name="AnimationWindow">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>
    <!-- 从下往上进，左往右退出 -->
    <style name="AnimationWindow_Share">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/slide_right_out</item>
    </style>
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.2</item>
    </style>
    <!--照片-->
    <style name="AppThemePhotos" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/bg_blue</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!--字体 品质首选-->
    <style name="TextTypeFace_pzsx">
        <item name="fontPath">font/MFLangQian_Noncommercial-Light.ttf</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!--字体 品质首选-->
    <style name="TextTypeFace_rshgjd">
        <item name="fontPath">font/MFYueYuan_Noncommercial-Regular.ttf</item>
    </style>
    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="pop_fresh_tab">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">13dp</item>
        <item name="android:paddingBottom">13dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:layout_weight">1.0</item>
    </style>
</resources>
